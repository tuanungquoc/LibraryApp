<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorBackground">
    <!--<CheckBox-->
    <!--android:id="@+id/bookSelectionCheckBox"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="CheckBox"-->
    <!--android:layout_toLeftOf=""/>-->

    <LinearLayout
        android:id="@+id/patronSearchLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/patronSearchLayout1.1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patronSearchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="C=="
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patronSearchAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="Bengaluru"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patronSearchPublish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="IEEE23"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patronSearchYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="2003"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patronSearchCopies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="23"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/patronSearchLayout1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/patronSearchBookCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/patronSearchLayout1.3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:layoutDirection="rtl">

            <CheckBox
                android:id="@+id/bookSelectionCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:enabled="true"
                android:focusable="false" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/patronSearchLayout1"
        android:orientation="horizontal"
        android:id="@+id/layout2">

        <TextView
            android:id="@+id/patronSearchCallnumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="12345678"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patronSearchStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="New"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/patronSearchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:text="7th floor , D:23"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/patronSearchKeywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/patronSearchLocation"
        android:text="C, programming, software, oops"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/patronSearchKeywords"
        android:id="@+id/layoutDueDate">
        <TextView
            android:id="@+id/patronDueDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patronDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 19th"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp" />
    </LinearLayout>



    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@id/layoutDueDate" />

</RelativeLayout>